# Model Provider Configuration
# Choose "gemini" (default, uses Google Gemini API) or "ollama" (local models)
MODEL_PROVIDER=gemini

# Google Gemini API Configuration
# Required when MODEL_PROVIDER=gemini
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# LangSmith Configuration (Optional - for observability/tracing)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=deep-research-v1-proto

# Tavily API Configuration (Required - for web search)
# Get your API key from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# Search Provider Configuration (Optional)
# Priority order for search providers (comma-separated)
# Supported providers: tavily, duckduckgo, mcp
SEARCH_PROVIDER_PRIORITY=tavily,duckduckgo

# MCP Server Configuration (Required when using SEARCH_PROVIDER_PRIORITY=mcp)
# Command to start the MCP server
MCP_SERVER_COMMAND=uv
# Arguments for the MCP server command (space-separated)
# Example: --directory /path/to/local-search-mcp run src/server.py
MCP_SERVER_ARGS=--directory /path/to/local-search-mcp run src/server.py
# Optional environment variables for MCP server (JSON format)
# MCP_SERVER_ENV={"PATH": "/usr/local/bin:/usr/bin"}
